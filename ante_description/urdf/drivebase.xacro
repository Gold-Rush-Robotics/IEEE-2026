<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


<xacro:macro name="drivebase" params="parent *origin">

  <!-- fix chassis to base_link, given by parent -->
  <joint name="drivebase_base_link" type="fixed">
    <parent link="${parent}"/>
    <child link="chassis_link"/>
    <!-- <xacro:insert_block name="origin" /> -->
  </joint>

  <!-- wheel joints -->
  <joint name="front_left_axle" type="continuous">
    <origin xyz="0.111 0.042 -0.012" rpy="-1.5707964 0. 1.5707964"/>
    <parent link="chassis_link"/>
    <child link="front_left_wheel"/>
    <axis xyz="0. 0. 1."/>
  </joint>
  <joint name="front_right_axle" type="continuous">
    <origin xyz="-0.111 0.042 -0.012" rpy="-1.5707964 0. -1.5707964"/>
    <parent link="chassis_link"/>
    <child link="front_right_wheel"/>
    <axis xyz="0. 0. 1."/>
  </joint>
  <joint name="rear_left_axle" type="continuous">
    <origin xyz="0.111 0.182 -0.012" rpy="-1.5707964 0. 1.5707964"/>
    <parent link="chassis_link"/>
    <child link="rear_left_wheel"/>
    <axis xyz="0. 0. 1."/>
  </joint>
  <joint name="rear_right_axle" type="continuous">
    <origin xyz="-0.111 0.182 -0.012" rpy="-1.5707964 0. -1.5707964"/>
    <parent link="chassis_link"/>
    <child link="rear_right_wheel"/>
    <axis xyz="0. 0. 1."/>
  </joint>


  <link name="chassis_link">
    <visual>
      <origin xyz="0. 0. 0." rpy="0. 0. 0."/>
      <geometry>
        <mesh filename="package://ante_description/meshes/decimated_drivebase.obj" scale="1. 1. 1."/>
      </geometry>
    </visual>
  </link>
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0. -0. 0.06" rpy="1.5707964 1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0. -0. 0.06" rpy="1.5707964 1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </collision>
  </link>
  <link name="front_right_wheel">
    <visual>
      <origin xyz="-0. -0. 0.06" rpy="-0.3917964 1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="-0. -0. 0.06" rpy="-0.3917964 1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </collision>
  </link>
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0. -0. 0.02" rpy="-0.3917964 -1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0. -0. 0.02" rpy="-0.3917964 -1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </collision>
  </link>
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="-0. -0. 0.06" rpy="-0.3917964 1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="-0. -0. 0.06" rpy="-0.3917964 1.5707964 0. "/>
      <geometry>
        <mesh filename="package://ante_description/meshes/wheel.obj" scale="1. 1. 1."/>
      </geometry>
    </collision>
  </link>
</xacro:macro>
</robot>
